@page
@model ExpenseTracker.Api.Pages.Budgets.CreateModel
@{
    ViewData["Title"] = "Set budget";
}
<div class="mb-4"><a asp-page="Index" class="text-decoration-none"><i class="bi bi-arrow-left"></i> Back</a></div>
<h2 class="h4 mb-4">Set budget</h2>
<div class="card border-0 shadow-sm" style="max-width: 28rem;">
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="Year" />
            <input type="hidden" asp-for="Month" />
            <div class="mb-3">
                <label class="form-label">Category</label>
                <select asp-for="CategoryId" class="form-select" asp-items="Model.CategoryOptions" required></select>
            </div>
            <div class="mb-3">
                <label class="form-label">Monthly limit</label>
                <input asp-for="AmountLimit" class="form-control" type="number" step="0.01" min="0" required />
            </div>
            <p class="text-muted small">@Model.Month/@Model.Year</p>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
        </form>
    </div>
</div>
