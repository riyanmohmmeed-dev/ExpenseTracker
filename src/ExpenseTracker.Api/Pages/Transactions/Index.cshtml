@page
@model ExpenseTracker.Api.Pages.Transactions.IndexModel
@{
    ViewData["Title"] = "Transactions";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 mb-0">Transactions</h1>
    <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Add</a>
</div>

<form method="get" class="row g-2 mb-4">
    <div class="col-auto"><input type="date" name="from" class="form-control" value="@Model.From.ToString("yyyy-MM-dd")" /></div>
    <div class="col-auto"><input type="date" name="to" class="form-control" value="@Model.To.ToString("yyyy-MM-dd")" /></div>
    <div class="col-auto">
        <select name="categoryId" class="form-select">
            <option value="">All categories</option>
            @foreach (var c in Model.Categories)
            {
                <option value="@c.Id" selected="@(Model.CategoryId == c.Id)">@c.Name</option>
            }
        </select>
    </div>
    <div class="col-auto"><button type="submit" class="btn btn-secondary">Filter</button></div>
</form>

<div class="card border-0 shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Date</th>
                    <th>Category</th>
                    <th>Note</th>
                    <th class="text-end">Amount</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Transactions.Count == 0)
                {
                    <tr><td colspan="5" class="text-muted text-center py-4">No transactions. <a asp-page="Create">Add one</a>.</td></tr>
                }
                else
                {
                    @foreach (var t in Model.Transactions)
                    {
                        <tr>
                            <td>@t.Date.ToString("yyyy-MM-dd")</td>
                            <td><span class="badge bg-secondary">@t.Category?.Name</span></td>
                            <td>@(t.Note ?? "â€”")</td>
                            <td class="text-end @(t.IsIncome ? "text-success" : "text-danger")">@(t.IsIncome ? "+" : "-")@t.Amount.ToString("N2")</td>
                            <td>
                                <a asp-page="Edit" asp-route-id="@t.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                <form asp-page="Delete" asp-route-id="@t.Id" method="post" class="d-inline" onsubmit="return confirm('Delete?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
