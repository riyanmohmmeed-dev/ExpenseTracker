@page "{id:int}"
@model ExpenseTracker.Api.Pages.Transactions.EditModel
@{
    ViewData["Title"] = "Edit transaction";
}
<div class="mb-4"><a asp-page="Index" class="text-decoration-none"><i class="bi bi-arrow-left"></i> Back</a></div>
<h2 class="h4 mb-4">Edit transaction</h2>
<div class="card border-0 shadow-sm" style="max-width: 28rem;">
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label class="form-label">Type</label>
                <select asp-for="IsIncome" class="form-select">
                    <option value="false">Expense</option>
                    <option value="true">Income</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Amount</label>
                <input asp-for="Amount" class="form-control" type="number" step="0.01" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Category</label>
                <select asp-for="CategoryId" class="form-select" asp-items="Model.CategoryOptions" required></select>
            </div>
            <div class="mb-3">
                <label class="form-label">Date</label>
                <input asp-for="Date" class="form-control" type="date" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Note</label>
                <input asp-for="Note" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
        </form>
    </div>
</div>
