@page
@model ExpenseTracker.Api.Pages.Categories.CreateModel
@{
    ViewData["Title"] = "Add category";
}
<div class="mb-4"><a asp-page="Index" class="text-decoration-none"><i class="bi bi-arrow-left"></i> Back</a></div>
<h2 class="h4 mb-4">Add category</h2>
<div class="card border-0 shadow-sm" style="max-width: 28rem;">
    <div class="card-body">
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input asp-for="Name" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Icon (emoji)</label>
                <input asp-for="Icon" class="form-control" placeholder="e.g. ðŸ”" />
            </div>
            <div class="mb-3">
                <label class="form-label">Color (hex)</label>
                <input asp-for="ColorHex" class="form-control form-control-color" type="color" style="width:3rem;height:2.5rem;" />
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
        </form>
    </div>
</div>
