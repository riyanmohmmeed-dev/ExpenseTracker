<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpenseTracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-page="/Index"><i class="bi bi-wallet2"></i> ExpenseTracker</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav" aria-controls="nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="nav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-page="/Index"><i class="bi bi-grid"></i> Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Transactions/Index"><i class="bi bi-arrow-left-right"></i> Transactions</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Categories/Index"><i class="bi bi-tags"></i> Categories</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Budgets/Index"><i class="bi bi-graph-up"></i> Budgets</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Recurring/Index"><i class="bi bi-arrow-repeat"></i> Recurring</a></li>
                </ul>
                <a class="btn btn-outline-light btn-sm" href="/swagger" target="_blank">API</a>
            </div>
        </div>
    </nav>
    <main class="container py-4">
        @RenderBody()
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
